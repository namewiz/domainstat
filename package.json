{
  "name": "fast-domain-status",
  "version": "0.1.5",
  "description": "Extremely fast domain status checker library that a combination DOH, HOST, PING, RDAP, WHOIS etc",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npx -y esbuild src/index.ts --bundle --minify --format=esm --target=es2020 --outdir=dist/ --platform=node --external:whois",
    "test": "npm run build && ava",
    "start": "npm run build && cp dist/index.js demo/index.js && npx serve demo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justiceo/fast-domain-status.git"
  },
  "bugs": {
    "url": "https://github.com/justiceo/fast-domain-status/issues"
  },
  "author": "Justice Ogbonna",
  "keywords": [],
  "exports": {
    ".": "./dist/index.js"
  },
  "license": "ISC",
  "engines": {
    "node": "^22.12.0",
    "npm": "^10.9.0"
  },
  "dependencies": {
    "tldts": "^7.0.10",
    "whois": "^2.15.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "ava": "^6.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.3.3"
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "timeout": "3m"
  }
}
