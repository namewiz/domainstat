{
  "name": "domainstat",
  "version": "1.0.3",
  "description": "Extremely fast domain status checker library using DoH, RDAP and WHOIS API.",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npx -y esbuild src/index.ts --bundle --minify --format=esm --target=es2020 --outdir=dist/ --platform=node",
    "test": "npm run build && ava",
    "start": "npm run build && cp dist/index.js demo/index.js && npx serve demo"
  },
  "homepage": "https://github.com/namewiz/domainstat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namewiz/domainstat.git"
  },
  "bugs": {
    "url": "https://github.com/namewiz/domainstat/issues"
  },
  "author": "Justice Ogbonna <dev@justiceo.com>",
  "keywords": [
    "domain-name",
    "domain-status",
    "domain-availability",
    "rdap",
    "whois"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "license": "MIT",
  "engines": {
    "node": "^22.12.0",
    "npm": "^10.9.0"
  },
  "dependencies": {
    "tldts": "^7.0.10"
  },
  "devDependencies": {
    "ava": "^6.4.1"
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "timeout": "3m"
  }
}
